@model List<NewsSystem.Client.MVC.Models.NewsViewModels.AllNewsViewModel>


@{
    WebGrid grid = new WebGrid(Model, rowsPerPage: 5);
}

<br />
<div class="row">
    <div class="well col-md-6 col-md-offset-3">
        <br />
        @grid.GetHtml(
    tableStyle: "table table-striped table-hover form-group",
    headerStyle: "text-center",
    columns: grid.Columns(
        grid.Column("Title", "Title"),
        grid.Column(columnName: "Details", format: (item) => Html.ActionLink("Go to details", "Details", "News", new { id = item.Id }, null))
      ))
    </div>
</div>